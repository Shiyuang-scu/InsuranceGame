<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/affair"
   >

    <include
        layout="@layout/title"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <com.example.captain.insurancegame.MarqueeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="8dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="                                       近日汽车交易市场火热，大量车辆交易达成！！！！                   "
        android:textColor="#e3687779"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/moneyyyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/title"
        android:text="99999"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="194dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/button11"
        android:text="客户方案" />

    <Button
        android:id="@+id/button6"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/button11"
        android:layout_marginTop="200dp"
        android:layout_marginStart="394dp"
        android:text="销售记录" />

    <Button
        android:id="@+id/button7"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/button11"
        android:layout_marginTop="134dp"
        android:layout_marginStart="394dp"
        android:text="学习资料" />

    <Button
        android:id="@+id/button8"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/button11"
        android:layout_marginTop="134dp"
        android:layout_marginStart="194dp"
        android:text="我的信息" />

    <ScrollView
        android:id="@+id/svcus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:background="#00FCFCE6"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/cancle"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginEnd="38dp"
                android:layout_marginStart="360dp"
                android:background="@drawable/close"
                android:contentDescription="aaa" />

            <!--<TextView-->
            <!--android:id="@+id/textView8"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="客户档案"-->
            <!--android:textSize="24sp"-->
            <!--android:visibility="invisible" />-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/cus"
                android:contentDescription="adad">

            </ImageView>


        </RelativeLayout>


    </ScrollView>


    <ScrollView
        android:id="@+id/svsale"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:background="#9062A7CC"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/cancle1"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/close"
                android:contentDescription="aaa" />

            <ImageButton
                android:id="@+id/salebegin"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/button11"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/button11" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:fontFamily="serif"
                android:text="请选择你的销售计划："
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="56dp"
                android:text="保险类别："
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="97dp"
                android:text="销售对象"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="137dp"

                android:text="销售区域"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="187dp"

                android:text="销售方式"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/textView3"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:layout_toEndOf="@id/textView3"
                android:entries="@array/insurance"
                android:visibility="visible" />

            <RadioGroup
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="190dp"
                    android:layout_marginTop="97dp"
                    android:text="中年" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="97dp"
                    android:text="青少年" />
            </RadioGroup>

            <RadioGroup
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="127dp"
                    android:text="广场" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="126dp"
                    android:text="地铁口" />
            </RadioGroup>

            <RadioGroup
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="177dp"
                    android:text="晓之以理" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="177dp"
                    android:text="动之以情" />
            </RadioGroup>

        </RelativeLayout>


    </ScrollView>

    <ScrollView
        android:id="@+id/svinfo"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_alignEnd="@+id/svsale"
        android:layout_alignTop="@+id/svsale"
        android:layout_marginEnd="12dp"
        android:background="#68ED99F4"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cancle2"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/close"
                android:contentDescription="aaa" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="我的档案"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView10"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="-------------个人属性-------------------"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView11"
